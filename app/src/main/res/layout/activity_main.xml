<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.sgstudios.test.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnBuy"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Buy"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/btnSubscribe"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorAccent"
                android:text="Sub"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/btnAPICall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="5dp"
                android:text="Restore"
                android:textColor="@android:color/background_light"
                />

            <Button
                android:id="@+id/btnWidget"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/holo_green_dark"
                android:text="Widget"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/btnClr"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@android:color/darker_gray"
                android:text="X"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInit"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:text="Init"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:text="Login"/>

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:text="Signup"/>

            <Button
                android:id="@+id/btnForgetPass"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:text="Forget Pass"
                android:layout_weight="0.51"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChangePass"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:text="Chg Pass"/>

            <Button
                android:id="@+id/btnMyAccount"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:text="My Act"
                />

            <Button
                android:id="@+id/btnParentalLock"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:text="Parental Lock"
                android:layout_weight="0.03"/>

            <Button
                android:id="@+id/btnChildData"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Kid"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnVerifyToken"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Vrfy Token"/>

            <Button
                android:id="@+id/btnVerifySession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Vrfy Session"/>

            <Button
                android:id="@+id/btnOpenId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="OpenId"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGameStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Gm Start"/>

            <Button
                android:id="@+id/btnGameStop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Gm Stop"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Logout"
                />


        </LinearLayout>

        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/btnAPICall"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/txtLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnAPICall"
                android:textColor="@android:color/white"/>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>
